                <!--android:textSize="10dp" />-->

                <!--<TextView-->
                <!--android:id="@+id/tv_totalCost"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginHorizontal="10dp"-->
